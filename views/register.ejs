<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" type="image/jpg" href="logo.jpg" />
    <title>gradr</title>
  </head>
  <style>
    body {
      padding-top: 50px;
    }
  </style>
  <body>
    <div class="container-md mb-5">
      <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img
              src="logo.png
          "
              alt="Logo"
              width="24"
              height="24"
              class="d-inline-block align-text-top"
            />
            gradr
          </a>
        </div>
      </nav>
    </div>
    <div class="container-md">
      <div class="card">
        <div class="card-header">Register Student</div>
        <div class="card-body">
          <form action="/new_student" method="post">
            <div class="mb-3 row">
              <label for="registration_number" class="col-sm-3 col-form-label"
                >Reg No:</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="registration_number"
                  name="registration_number"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="last_name" class="col-sm-3 col-form-label"
                >Surname:</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="last_name"
                  name="last_name"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="first_name" class="col-sm-3 col-form-label"
                >First Name:</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="first_name"
                  name="first_name"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="middle_name" class="col-sm-3 col-form-label"
                >Middle Name:</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="middle_name"
                  name="middle_name"
                />
              </div>
            </div>
            <div class="mb-3 row">
              <label for="department" class="col-sm-3 col-form-label"
                >Department:</label
              >
              <div class="col-sm-10">
                <select class="form-select" id="department" name="department">
                  <option selected></option>
                  <% for (const department of departments) { %>
                  <option value="<%= department %>"><%= department %></option>
                  <% } %>
                </select>
                </select>
              </div>
            </div>
            <div class="mb-3 row">
              <label for="score" class="col-sm-3 col-form-label">Score:</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="score"
                  name="score"
                />
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
