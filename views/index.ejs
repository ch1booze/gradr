<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" type="image/jpg" href="logo.jpg" />
    <title>gradr</title>
  </head>
  <style>
    body {
      padding-top: 50px;
      padding-left: 30px;
      padding-right: 30px;
    }
    #register-submit {
      float: right;
    }
    p#message {
      margin-top: 100px; /* Adjust the value for desired distance */
    }
  </style>
  <body>
    <div class="container-md mb-5">
      <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img
              src="logo.png
          "
              alt="Logo"
              width="20"
              height="20"
              class="d-inline-block align-text-top"
            />
            gradr
          </a>
          <div
            class="btn-group btn-group-sm"
            role="group"
            aria-label="Basic outlined example"
          >
            <a href="/week" class="btn btn-outline-primary">Reset</a>
            <a href="/download" class="btn btn-primary">Download</a>
          </div>
        </div>
      </nav>
    </div>
    <div class="container-md">
      <form action="/grade" method="post">
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="Registration number"
            aria-label="Registration number"
            aria-describedby="button-addon2"
            id="registration_number"
            name="registration_number"
            required
          />
        </div>
        <div
          class="btn-group btn-group-sm"
          role="group"
          aria-label="Basic outlined example"
          id="register-submit"
        >
          <a href="/register" class="btn btn-outline-primary">Register</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
    <p class="text-center" id="message"><%= message %></p>
    <script>
      const messageElement = document.getElementById("message");
      function showAndHideMessage() {
        messageElement.style.display = "block";
      }
      setTimeout(function () {
        messageElement.style.display = "none";
      }, 3000);

      const regNoInput = document.getElementById("registration_number");
      regNoInput.addEventListener("keyup", (event) => {
        const regNoText = regNoInput.value;
        console.log(regNoText.length);
        if (regNoText.length === 3 && event.keyCode !== 8) {
          const isAlpha = /^[a-zA-Z]+$/.test(regNoText);
          if (isAlpha) {
            regNoInput.value = regNoText + "/20";
          }
        }

        if (regNoText.length === 8 && event.keyCode !== 8) {
          const isNumber = /^[0-9]+$/.test(regNoText.slice(4, 9));
          if (isNumber) {
            regNoInput.value = regNoText + "/";
          }
        }
      });
    </script>
  </body>
</html>
